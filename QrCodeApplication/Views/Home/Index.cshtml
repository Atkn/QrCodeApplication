@{
    ViewData["Title"] = "Home Page";
}
@{
    string qrCodeValue = ViewBag.InputValue ?? "";
}
<form asp-controller="Home" asp-action="Index">
    <div class="row">
        <div class="col-lg-6">Enter Qr Code String</div>
        <div class="col-lg-6">
            <input type="text" id="QrCodeString" class="form-control" name="Url"  value="@qrCodeValue" />
        </div>
    </div>
    <div class="col-lg-12">
        <input type="submit" value="Generate Qr Code" class="btn btn-primary" />
    </div>
</form>
@if (!string.IsNullOrEmpty(ViewBag.Url))
{
    <div class="col-lg-12">
        <img src="@ViewBag.Url" />

    </div>
}
